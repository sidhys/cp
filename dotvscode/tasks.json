{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Competitive Programming File",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "filename=unnamed-competitive-$(openssl rand -hex 20).cpp && cp .vscode/util/template.cpp $filename && code $filename"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "Compile and Run C++ File",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                ".vscode/util/c_r.sh \"${file}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        }
    ]
}
